@model IEnumerable<Capa_Entidad.ListarPelicula_Result>
    @using Capa_Entidad;
    @{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserPrincipal.cshtml";
    }
    @foreach (ListarUltimaPelicula_Result item in ViewBag.Ultimas_Peliculas)
    {
    <section class="hero">
        <div class="container-fluid" style="padding: 0 10%">
            <div class="hero__slider owl-carousel">
                <div class="hero__items set-bg" data-setbg="">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="hero__text">
                                <div class="label">Adventure</div>
                                <h2>@item</h2>
                                <p>After 30 days of travel across the world...</p>
                                <a href="anime-details.html"><span>Watch Now</span> <i class="fa fa-angle-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    }
    @foreach (var item in Model)
{
    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container-fluid " style=" padding: 0 10%">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="trending__product">
                        <div class="row">
                            <div class="col-lg-8 col-md-8 col-sm-8">
                                <div class="section-title">
                                    <h4>Movies</h4>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-4 col-sm-4">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg" data-setbg="img/trending/trend-1.jpg">
                                        <div class="ep">18 / 18</div>
                                        <div class="comment"><i class="fa fa-comments"></i> 11</div>
                                        <div class="view"><i class="fa fa-eye"></i> 9141</div>
                                    </div>
                                    <div class="product__item__text">
                                        <ul>
                                            <li>Active</li>
                                            <li>Movie</li>
                                        </ul>
                                        <h5><a href="anime-details.html">The Seven Deadly Sins: Wrath of the Gods</a></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>  <!-- Product Section End -->
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duracion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Director)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Completo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Protagonista)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sipnosis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Media)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Imagen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estudio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaLanzamiento)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

    </table>
